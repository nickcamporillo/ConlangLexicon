<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,Log4net"/>
  </configSections>
  
  <startup> 
       <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5"/>
   </startup>
    
   <connectionStrings>
     <!-- SQLite Connection string for use with the .NET ConfigurationManager; notice asterix: this will be replaced with Path info coming in from the command line params -->
     <add name="CNX" connectionString="Data Source=*BuilderTable.sqlite; Version=3"/> 
   </connectionStrings>

  <appSettings>
    <add key="APPLICATION_VERSION" value="Version 3.00"/>
    <add key="InterviewPeriod" value="20010SI"/>
    <add key="OutputDir" value="c:\temp\"/>
    <add key="Mode" value="T"/>
    <!--T=test, P=Production-->
  </appSettings>


  <!-- //Recipe for simplified configuration by using app.config: https://www.codeproject.com/Tips/1107824/Perfect-Log-Net-with-Csharp --> 
  <log4net>
    <appender name="TestAppender"

    type="log4net.Appender.RollingFileAppender" >
      <file value="c:\temp\MyTestAppender.log" />
      <encoding value="utf-8" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <!--<rollingStyle value="Size" />
      <maxSizeRollBackups value="5" />
      <maximumFileSize value="5MB" />
      <staticLogFileName value="true" />-->
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %level [%thread] %type.%method - %message%n" />
      </layout>
    </appender>
    <root>
      <level value="All" />
      <!-- If the following line is not included the log file 
      will not be created even if log4net is configured with this file. -->
      <appender-ref ref="TestAppender" />
    </root>
  </log4net>  

</configuration>
